{
  "name": "todo-list-ts",
  "version": "0.0.1",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.4",
    "@elysiajs/openapi": "^1.4.13",
    "@elysiajs/static": "^1.4.7",
    "@logtape/logtape": "^1.3.6",
    "@logtape/pretty": "^1.3.6",
    "boune": "^0.10.0",
    "drizzle-orm": "^0.45.1",
    "elysia": "^1.4.22",
    "pg": "^8.17.2",
    "poku": "^3.0.2",
    "zod": "^4.3.5"
  },
  "bin": {
    "todoman": "dist/todoman.js"
  },
  "scripts": {
    "build": "bun build index.ts --outdir dist --target node18 --external:@dotenvx/dotenvx --external:@logtape/logtape --external:@logtape/pretty --external:boune --external:hono --minify",
    "dev-build": "bun build src/cli/main.ts --outdir dist --external:@dotenvx/dotenvx --external:@logtape/logtape --external:@logtape/pretty --external:boune --external:hono",
    "start": "bun run build",
    "dev": "bun run build && bun --watch dist/todoman.js"
  }
}
